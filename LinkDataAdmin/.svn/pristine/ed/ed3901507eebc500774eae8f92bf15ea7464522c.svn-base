def __addGroup(form):
    g_id = auth.id_group(auth.user.company)
    if not g_id:
        g_id = auth.add_group(auth.user.company, auth.user.company)
    auth.add_membership(g_id, auth.user.id)
    return

def register():
    form = auth.register(onaccept=__addGroup)
    return dict(form=form)
