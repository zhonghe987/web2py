  {{block head}}{{end}}
  <style>
#shw,#su,#co,#notice{
	color:red;
}
.modal-header{
	background:#81b340;
}
div.none{  
            width: 0px;  
            height: 0px;  
            display: none;  
}  
#d{
	position: relative;
	line-height: 50px;
	left:110px;
	color:red;
}
#fullbg {
    background-color:Gray;
    left:0px;
    opacity:0.5;
    position:absolute;
    top:0px;
    z-index:3;
    filter:alpha(opacity=50); /* IE6 */
    -moz-opacity:0.5; /* Mozilla */
    -khtml-opacity:0.5; /* Safari */
}
#upload{  
    margin: 0 auto;  
    text-align: center;  
    width: 500px;  
}  
.plupload_wrapper plupload_scroll{  
    margin: auto 0;  
    margin-top: 60px;  
    text-align: center;  
    border: 1px solid #d2d2d2;  
}  
#up {
    background-color:#FFF;
    border:1px solid #888;
    display:none;
    height:200px;
    left:50%;
    margin:-100px 0 0 -100px;
    padding:12px;
    position:fixed !important; /* 浮动对话框 */
    position:absolute;
    top:50%;
    width:200px;
    z-index:5;
}
#up p {
    margin:0 0 12px;
}
#up p.close {
    text-align:right;
}
</style>
</head>

<body>
{{block container}}
<section id="container">
    {{if header_enabled:}}
    <header id="header">
        <!--logo start-->
        <div class="brand">
            <a href="#" class="logo"><img src="{{=URL('static','assets/img/logo.png')}}" alt=""/></a>
        </div>
        <!--logo end-->
        <div class="toggle-navigation toggle-left">
            <button type="button" class="btn btn-default" id="toggle-left" data-toggle="tooltip" data-placement="right" title="隐藏/显示左侧菜单">
                <i class="fa fa-bars"></i>
            </button>
        </div>
        <div class="user-nav">
            <ul>
                <li class="dropdown settings">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                     欢迎回来，{{=auth.user.username}} <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu animated fadeInDown">
                        <li><a href="{{=URL('admin','logout')}}"><i class="fa"></i>退出系统</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </header>
    {{pass}}

    {{if sidebar_enabled:}}
        {{if admin:}}
        {{include 'adminLeftSide.html'}}
        {{else:}}
        {{include 'leftSide.html'}}
        {{pass}}
    {{pass}}

    <!--main content start-->
    <section class="main-content-wrapper">
        <section id="main-content">
            <div class="row">
                <div class="col-md-12">
                    <!--breadcrumbs start -->
                    <ul class="breadcrumb">
                        {{for b in breadcrumb:}}
                        <li>{{=b}}</li>
                        {{pass}}
                    </ul>
                    <!--breadcrumbs end -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">{{=panelTitle}}</h3>
                            </div>
                            {{block plane}}
                            {{end}}
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <!--main content end-->  
</section>
{{end}}


 <script>
jQuery(document).ready(function(){
