{{header = True}}
{{sidebar = True}}
{{bread = True}}
{{extend 'layout.html'}}
{{block head}}

{{end}}
{{block content}}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-control">
                    {{=form.custom.begin}}
                    <table width="900" class="bq">
                        <tr>
                            <td width="100" align="right">标签名称：</td>
                            <td width="160" align="left">{{=form.custom.widget.tagname}}</td>
                            <td width="100" align="right">大类别：</td>
                            <td width="160" align="left">{{=form.custom.widget.big}}</td>
                            <td width="50" align="right">小类别：</td>
                            <td width="160" align="left">{{=form.custom.widget.mid}}</td>
                            <td width="120" align="center">{{=form.custom.submit}}</td>
                        </tr>
                    </table>
                    {{=form.custom.end}}
                </div>
            </div>

            <div class="panel-body1">
                <div class="delete-all">
                       已创建 <font color="red">{{=count}}</font> 个标签
                </div>
                <div class="add-user">
                    <a href="{{=URL('tagManage','tagEdit')}}"><button type="button" class="btn btn-primary">新增标签项目</button>
                </div>
            </div>

            <div class="panel-body">                           
                <table class="table">
                    <thead>
                        <tr>
                            <th width="5%">编号</th>
                            <th width="15%">标签名称</th>
                            <th width="15%">大类别</th>
                            <th width="15%">小类别</th>
                            <th width="15%">近7天处理量</th>
                            <th width="10%">创建时间</th>
                            <th width="25%">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{for i, r in enumerate(tagData):}}
                        <tr align="center">
                             <td>{{=i+1}}</td>
                             <td>{{=r.tagSource.tagName}}</td>
                             <td>{{=r.bigClass.bigName}}</td>
                             <td>{{=r.midClass.midName}}</td>
                             <td>{{=tagCount.get(r.tagSource.id,0)}}</td>
                             <td>{{=r.tagSource.createDate}}</td>
                             
                             <td><a href="">编辑</a>&nbsp;&nbsp;<a href='{{=URL("tagDelete",vars=dict(sh_id=r.tagSource.id))}}'>删除</a></td>
                        </tr> 
                        {{pass}}                                                         
                    </tbody>
                </table>
